                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:id="@+id/cardsButtonId9"
                    android:background="#fafafa"
                    android:text="@string/cards"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_toRightOf="@+id/center"
                android:layout_below="@+id/card9"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/card11">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:id="@+id/cardsButtonId11"
                    android:background="#fafafa"
                    android:text="@string/cards"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_toLeftOf="@+id/center"
                android:layout_below="@+id/card2"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/card4">>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:id="@+id/cardsButtonId4"
                    android:background="#fafafa"
                    android:text="@string/cards"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_toLeftOf="@+id/center"
                android:layout_below="@+id/card4"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/card6">>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:id="@+id/cardsButtonId6"
                    android:background="#fafafa"
                    android:text="@string/cards"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_toLeftOf="@+id/center"
                android:layout_below="@+id/card6"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/card8">>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:id="@+id/cardsButtonId8"
                    android:background="#fafafa"
                    android:text="@string/cards"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_toLeftOf="@+id/center"
                android:layout_below="@+id/card8"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/card10">>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
